{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center">Attributs</h2>
        <div class="d-flex justify-content-center my-5">
            <a href="{{ path('admin.attributes.create') }}" class="btn btn-primary">Cr√©er un nouvel attribut</a>
        </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Label</th>
                    <th scope="col">Option</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for attribute in attributes %}
                <tr>
                    <td>{{ attribute.id }}</td>
                    <td>{{ attribute.label }}</td>
                    <td>
                        {{ attribute.option.name ?? 'None' }}
                    </td>
                    <td>
                        <a href="{{ path('admin.attributes.update', {'id': attribute.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('admin.attributes.delete', {'id': attribute.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

