{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center h-50">
        <div class="col-md-8">
            <div class="card bg-light mt-5">
                <div class="card-header">
                    <h4 class="card-title"><i class="fas fa-lock"></i> Offer Configurator</h4>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">
                            <p class="text-center">Les informations saisies ne sont pas bonnes !</p>
                        </div>
                    {% endif %}
                    <form id="form-login" method="post">
                        <div class="form-group">
                            <label for="username">Adresse mail</label>
                            <input type="text" class="form-control" placeholder="admin@gmail.com" name="email" required value="{{ lastUsername }}">
                            <label for="">Mot de passe</label>
                            <input type="password" class="form-control" placeholder="*******" required name="password">
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-lock-open"></i> Connexion</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
